<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/general_screen">

    <fragment
        android:id="@+id/general_screen"
        android:name="ru.shumilova.rick_and_morty.mvp.view.general_screen.GeneralScreenFragment"
        android:label="fragment_general_screen"
        tools:layout="@layout/fragment_general_screen">
        <action
            android:id="@+id/action_general_screen_to_charactersFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@android:anim/fade_in" />
        <action
            android:id="@+id/action_general_screen_to_locationsFragment"
            app:destination="@id/locationsFragment" />
        <action
            android:id="@+id/action_general_screen_to_episodesFragment"
            app:destination="@id/episodesFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.shumilova.rick_and_morty.mvp.view.search_screen.SearchFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_charactersFragment_to_characterCardFragment"
            app:destination="@id/infoCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="ru.shumilova.rick_and_morty.mvp.view.locations_screen.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" />
    <fragment
        android:id="@+id/episodesFragment"
        android:name="ru.shumilova.rick_and_morty.mvp.view.episodes_screen.EpisodesFragment"
        android:label="fragment_episodes"
        tools:layout="@layout/fragment_episodes" />
    <fragment
        android:id="@+id/infoCardFragment"
        android:name="ru.shumilova.rick_and_morty.mvp.view.character_card.InfoCardFragment"
        android:label="fragment_character_card"
        tools:layout="@layout/fragment_info_card" />
</navigation>